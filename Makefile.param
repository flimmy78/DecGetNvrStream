CCARCH := arm-hisiv100nptl-linux-

CFLAGS += -march=armv7-a -mcpu=cortex-a9
CXXFlAGS += -march=armv7-a -mcpu=cortex-a9
CPPFLAGS += -march=armv7-a -mcpu=cortex-a9

#CFLAGS += -DHI3535 -DHI3520D -g -O0
